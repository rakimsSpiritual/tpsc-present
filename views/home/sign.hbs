<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<title>Join TeLis Video Classroom</title>
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
<link rel="stylesheet" href="/css/materialize.min.css">
<link rel="stylesheet" href="/css/stylee.css">

<style>
body { margin:0; font-family:'Segoe UI', sans-serif; background:#f0f0f0; }
.header-bar { background-color: rgba(0, 85, 77, 0.9); color:white; padding:10px 20px; display:flex; justify-content:space-between; align-items:center; }
.header-bar div { margin: 0 10px; }
.main-wrap { margin-top:20px; display:flex; justify-content:center; }
.join-card { background-color:#00554d; color:white; padding:30px; border-radius:5px; cursor:pointer; font-size:20px; transition: 0.3s; }
.join-card:hover { background-color:#007361; }
.form-card { background:#00554d; color:white; padding:30px; border-radius:5px; width:90%; max-width:400px; }
input, label { color:white !important; }
@media screen and (max-width:600px) {
  .header-bar { flex-direction:column; text-align:center; }
}
</style>
</head>
<body>

<div class="header-bar">
  <div style="font-weight:bold;">TPSC Video Classroom Session</div>
  <div>
    <span id="clock"></span> | <span id="day"></span>
  </div>
</div>

<div class="main-wrap">
  <div class="join-card" id="joinBtn">Join Classroom</div>
</div>

<!-- Scripts -->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>

<script>
function updateTime() {
  const now = new Date();
  const clock = now.toLocaleTimeString();
  const day = now.toLocaleDateString(undefined, { weekday:'long', year:'numeric', month:'long', day:'numeric' });
  document.getElementById('clock').textContent = `Time: ${clock}`;
  document.getElementById('day').textContent = `Date: ${day}`;
}
setInterval(updateTime, 1000);
updateTime();

$(document).ready(function() {
  $('#joinBtn').on('click', function() {
    const formHtml = `
      <div class="form-card">
        <div class="row">
          <form class="col s12" id="joinForm">
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">call_to_action</i>
                <input id="meetingID" type="text" required>
                <label for="meetingID">Meeting ID</label>
              </div>
            </div>
            <div class="row">
              <div class="input-field col s12">
                <i class="material-icons prefix">person</i>
                <input id="nickname" type="text" required>
                <label for="nickname">Your Nickname</label>
              </div>
            </div>
            <button type="submit" class="btn waves-effect waves-light">Join <i class="material-icons right">send</i></button>
          </form>
        </div>
      </div>`;
    $('.main-wrap').html(formHtml);
  });

  $(document).on('submit','#joinForm', function(e){
    e.preventDefault();
    const meetingID = $('#meetingID').val().trim();
    const nickname = $('#nickname').val().trim();
    if(!meetingID || !nickname) return alert('Meeting ID and Nickname are required!');
    
    // Generate full appHome URL dynamically
    const joinUrl = `${window.location.origin}/appHome?meetingID=${encodeURIComponent(meetingID)}&uid=${encodeURIComponent(nickname)}`;
    window.location.href = joinUrl;
  });
});
</script>

</body>
</html>
