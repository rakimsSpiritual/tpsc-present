<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <title>TeLis Video Classroom</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <!-- CSS Libraries -->
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <link rel="stylesheet" href="/bootstrap.min.css">
    <link rel="stylesheet" href="/style.css">
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="/socket.io/socket.io.js"></script>
</head>
<body>
<main class="container-fluid d-flex flex-column home-wrap">
    <!-- Top area with local and remote videos -->
    <div class="g-top text-light d-flex">
        <div id="meetingContainer" style="flex-basis: 75%; display:none;">
            <h1 id="meetingname"></h1>
            <div class="call-wrap bg-black p-2">
                <div id="divUsers" class="d-flex flex-wrap">
                    <!-- Local video -->
                    <div id="me" class="userbox m-1">
                        <h5 class="display-center user-name">Me</h5>
                        <video id="localVideoCtr" autoplay muted playsinline class="video-box"></video>
                    </div>
                    <!-- Remote video template -->
                    <div id="remoteTemplate" class="userbox m-1" style="display:none;">
                        <h5 class="user-name"></h5>
                        <video autoplay playsinline class="video-box"></video>
                        <audio autoplay controls style="display:none;"></audio>
                    </div>
                </div>
            </div>
        </div>

        <!-- Right sidebar: Participants + Chat -->
        <div class="g-right-details-wrap bg-light text-secondary h-100 p-2" style="flex-basis: 25%; display:none;">
            <div class="meeting-heading-wrap d-flex justify-content-between">
                <div class="meeting-heading font-weight-bold cursor-pointer">Meeting Details</div>
                <div class="meeting-heading-cross cursor-pointer">
                    <span class="material-icons">clear</span>
                </div>
            </div>
            <div class="people-chat-wrap mt-3">
                <div class="people-heading cursor-pointer d-flex align-items-center justify-content-between">
                    <div><span class="material-icons">people</span> Participant (<span class="participant-count">1</span>)</div>
                </div>
                <div class="chat-heading cursor-pointer d-flex align-items-center justify-content-between mt-2">
                    <div><span class="material-icons">message</span> Chat</div>
                </div>
            </div>
            <div class="in-call-chat-wrap mt-3">
                <div class="chat-show-wrap">
                    <div id="messages" style="height:200px; overflow-y:auto; border:1px solid #ccc; padding:5px;"></div>
                    <div class="input-group mt-2">
                        <input type="text" id="msgbox" class="form-control" placeholder="Type a message">
                        <button id="btnSendMsg" class="btn btn-primary">Send</button>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bottom controls -->
    <div class="g-bottom bg-light d-flex justify-content-center align-items-center p-2">
        <div id="btnMuteUnmute" class="action-icon-style cursor-pointer mx-2"><span class="material-icons">mic_off</span></div>
        <div class="end-call-wrap action-icon-style cursor-pointer mx-2"><span class="material-icons text-danger">call</span></div>
        <div id="btnStartStopCam" class="action-icon-style cursor-pointer mx-2"><span class="material-icons">videocam_off</span></div>
        <button id="start-recording" class="btn btn-danger mx-2">Start Recording</button>
        <button id="download-video" class="btn btn-success mx-2" disabled>Download Recording</button>
    </div>
    <input type="hidden" class="username_holder">
</main>

<script src="/app.js"></script>
<script>
$(function() {
    const urlParams = new URLSearchParams(window.location.search);
    const meetingID = urlParams.get('meetingID');
    let userID = urlParams.get('uid');
    if (!userID) userID = prompt("Enter your nickname");

    if (!meetingID || !userID) {
        alert("Meeting ID or user missing");
        window.location.href = "/sign";
        return;
    }

    $(".username_holder").val(userID);
    $("#meetingContainer").show();

    // Initialize your main app
    MyApp(userID, meetingID);

    // Chat send
    $("#btnSendMsg").on("click", function() {
        const msg = $("#msgbox").val();
        if(msg.trim() !== "") {
            socket.emit("sendMessage", msg);
            $("#msgbox").val("");
        }
    });

    // End call button
    $(".end-call-wrap").on("click", function() {
        window.location.href = "/sign";
    });

    // Bottom controls placeholders
    $("#btnMuteUnmute").on("click", function() { console.log("Mic toggled"); });
    $("#btnStartStopCam").on("click", function() { console.log("Video toggled"); });

    // Recording placeholders
    $("#start-recording").on("click", function() { console.log("Start recording"); });
    $("#download-video").on("click", function() { console.log("Download recording"); });
});
</script>

<style>
.video-box {
    width: 250px;
    height: 180px;
    background: black;
}
.userbox {
    position: relative;
}
#divUsers {
    display: flex;
    flex-wrap: wrap;
}
</style>
</body>
</html>
