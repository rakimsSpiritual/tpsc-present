    <style>
        :root {
            --primary-color: #2c5f2d;
            --secondary-color: #97bc62;
            --accent-color: #f5f5f5;
            --text-dark: #333;
            --text-light: #fff;
            --highlight-color: #ff6b6b;
        }
        
        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background-color: #f8f9fa;
            overflow: hidden;
        }
        
        .home-wrap {
            height: 100vh;
            background-color: var(--accent-color);
        }
        
        .g-top {
            flex: 1;
            background-color: var(--primary-color);
            position: relative;
            border-radius: 0 0 20px 20px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }
        
        .top-remote-video-show-wrap {
            height: 100%;
            position: relative;
        }
        
        .call-wrap {
            height: 100%;
            border-radius: 20px;
            overflow: hidden;
            box-shadow: inset 0 0 20px rgba(0, 0, 0, 0.2);
        }
        
        .video-wrap {
            height: 100%;
            padding: 15px;
            justify-content: center;
            align-items: center;
        }
        
        .userbox {
            margin: 10px;
            background-color: rgba(0, 0, 0, 0.3);
            border-radius: 15px;
            padding: 10px;
            transition: all 0.3s ease;
            min-width: 200px;
            flex: 1 1 300px;
            max-width: 400px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        }
        
        .userbox:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 25px rgba(0, 0, 0, 0.2);
        }
        
        .userbox video {
            width: 100%;
            border-radius: 10px;
            background-color: #000;
        }
        
        .g-top-left {
            position: absolute;
            top: 20px;
            left: 20px;
            border-radius: 10px;
            padding: 5px 15px;
            box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
            z-index: 2;
        }
        
        .g-bottom {
            height: 80px;
            padding: 0 20px;
            border-radius: 20px 20px 0 0;
            box-shadow: 0 -4px 20px rgba(0, 0, 0, 0.1);
            background: linear-gradient(135deg, var(--primary-color) 0%, var(--secondary-color) 100%);
            color: white;
        }
        
        .bottom-middle {
            gap: 15px;
        }
        
        .action-icon-style {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            background-color: rgba(255, 255, 255, 0.2);
            transition: all 0.3s ease;
        }
        
        .action-icon-style:hover {
            background-color: rgba(255, 255, 255, 0.3);
            transform: scale(1.05);
        }
        
        .end-call-wrap {
            background-color: var(--highlight-color) !important;
        }
        
        .end-call-wrap:hover {
            background-color: #ff5252 !important;
        }
        
        .present-now-wrap {
            padding: 10px 15px;
            border-radius: 30px;
            transition: all 0.3s ease;
            background-color: rgba(255, 255, 255, 0.1);
        }
        
        .present-now-wrap:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .option-wrap {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            transition: all 0.3s ease;
        }
        
        .option-wrap:hover {
            background-color: rgba(255, 255, 255, 0.2);
        }
        
        .g-right-details-wrap {
            border-radius: 20px 0 0 20px;
            box-shadow: -5px 0 15px rgba(0, 0, 0, 0.1);
        }
        
        .meeting-heading-wrap {
            border-radius: 20px 0 0 0;
        }
        
        .people-chat-wrap {
            border-radius: 0;
        }
        
        .chat-message-sent-input-field {
            background-color: transparent;
            color: var(--text-dark);
            padding: 10px;
            border-radius: 20px;
            transition: all 0.3s ease;
        }
        
        .chat-message-sent-input-field:focus {
            outline: none;
            border-bottom: 2px solid var(--primary-color) !important;
        }
        
        .chat-message-sent-action {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            background-color: var(--primary-color);
            color: white !important;
            transition: all 0.3s ease;
        }
        
        .chat-message-sent-action:hover {
            background-color: var(--secondary-color);
            transform: rotate(30deg);
        }
        
        .g-detail {
            position: absolute;
            bottom: 80px;
            left: 20px;
            background-color: white;
            border-radius: 15px;
            padding: 15px;
            width: 300px;
            box-shadow: 0 5px 20px rgba(0, 0, 0, 0.1);
            z-index: 10;
        }
        
        .meeting-details-button {
            padding: 10px 15px;
            border-radius: 30px;
            background-color: rgba(255, 255, 255, 0.2);
            color: white;
            transition: all 0.3s ease;
        }
        
        .meeting-details-button:hover {
            background-color: rgba(255, 255, 255, 0.3);
        }
        
        .top-box-show {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 100;
            display: flex;
            justify-content: center;
            align-items: center;
        }
        
        .top-box {
            background-color: white;
            padding: 20px;
            border-radius: 15px;
            max-width: 400px;
            text-align: center;
